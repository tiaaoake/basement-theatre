        <footer class="footer" role="contentinfo">
            <div class="constrain-width row">


                <div class="footer-block sqs-col-12">
                    <h1>Sign up to our newsletter</h1>
                </div>
                <div class="footer-block sqs-col-7">
                    <form class="form">
                        <div class="form-group">
                            <input type="email" name="email" placeholder="YOUR EMAIL">
                            <button class="button">Ok</button>
                        </div>
                    </form>
                    <squarespace:navigation navigationId="mainNav" template="footer-navigation" />
                </div>

                <div class="footer-block sqs-col-2 address-block">
                    {.section website}
                        {.if socialAccounts}
                            <div id="sqs-social" data-content-field="connected-accounts">
                                {.repeated section socialAccounts}
                                    {.if profileUrl}
                                        <a href="{profileUrl}" target="_blank" title="{screenname}" class="social-{serviceName}"></a>
                                    {.end}
                                {.end}
                            </div>
                        {.end}
                    {.end}

                    <p>{website.location.addressTitle}</p>
                    <p>{website.location.addressLine1}</p>
                    <p>{website.location.addressLine2}</p>
                    <p>{website.location.addressCountry}</p>
                </div>
            </div>
        </footer>
        {squarespace-footers}
    </body>
</html>
